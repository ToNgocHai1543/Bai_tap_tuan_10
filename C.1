#include <bits/stdc++.h>
using namespace std;

char* reverse_string(const char* str) {
    int len = strlen(str);
    char* result = new char[len + 1];
    strcpy(result, str);
    for (int i = 0; i < len / 2; ++i) {
        char temp = result[i];
        result[i] = result[len - 1 - i];
        result[len - 1 - i] = temp;
    }
    return result;
}
int main() {
    const char* input = "Hello, world!";
    char* reversed = reverse_string(input);
    cout << input << endl;
    cout << reversed << endl;
    delete[] reversed;
    return 0;
}
